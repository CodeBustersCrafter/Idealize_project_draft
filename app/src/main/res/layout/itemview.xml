<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/ll_iyem_view">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/image_view_item_view"
        android:background="@drawable/ben"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_name"
            android:text="Carrot"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_price"
            android:text="1000"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_item_phone"
            android:text="0765820661"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>