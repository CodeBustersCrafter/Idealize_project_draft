<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@drawable/nature"
    android:backgroundTint="#65FFFFFF"
    android:backgroundTintMode="multiply"
    android:layout_gravity="center"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:id="@+id/dialogue_image"
            android:layout_height="150dp"
            android:src="@drawable/ben"
            android:layout_weight="1000"
            android:contentDescription="Profile Picture" />

        <ImageView
            android:id="@+id/dialogue_btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Profile Picture"
            android:src="@drawable/baseline_close_24" />


    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stefan Carlson"
        android:id="@+id/dialogue_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $19.99"
            android:id="@+id/dialogue_price"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 1"
            android:textSize="16sp"
            android:id="@+id/dialogue_quantity"
            android:layout_marginStart="16dp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogue_location"
        android:text="Location: New York, USA"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogue_phone"
        android:text="Phone: +1 (555) 123-4567"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogue_seller"
        android:text="Seller: John Doe"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialogue_rating1"
            android:background="@drawable/baseline_star_rate1_24"
            android:layout_marginTop="8dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialogue_rating2"
            android:background="@drawable/baseline_star_rate_24"
            android:layout_marginTop="8dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialogue_rating3"
            android:background="@drawable/baseline_star_rate_24"
            android:layout_marginTop="8dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialogue_rating4"
            android:background="@drawable/baseline_star_rate_24"
            android:layout_marginTop="8dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialogue_rating5"
            android:background="@drawable/baseline_star_rate_24"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogue_date_time"
        android:text="Date and Time: 05/12/2024 10:30 AM"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogue_description"
        android:text="Description: This is a sample description for the product."
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: Electronics"
        android:textSize="16sp"
        android:layout_marginTop="8dp" />

</LinearLayout>